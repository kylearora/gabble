<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/home.css">
    <title>Gabble</title>
  </head>
  <body>
    <h1>Gabble</h1>

    <div class="headerLinks">
      <a href="/">Gabble</a>
      <a href="/newGab">Create a new Gab</a>
      {{#user}}
      <a href="/">Logged in as {{username}}</a>
      {{/user}}
      <a href="/logout">Log Out</a>
    </div>


    {{errorMessage}}

    <div class="posts">
      {{#posts}}

      <div class="postsDiv">

        <div class="title">
        <h3>{{title}}</h3>
        </div>

        <div class="body">
        <h4 id="bodyText">{{body}}</h4>
        </div>

        <div class="">
          <h4>Liked By:</h4>
          {{#likes}}
            <h4>{{userId}}</h4>
          {{/likes}}
        </div>

        <div class="gabEdit">
          <a id="likeButton" href="/like/{{id}}">Like</a>
          <a id="deleteButton" href="/delete/{{id}}">Delete</a>
        </div>

      </div>
      {{/posts}}

    </div>

  </body>
</html>
